{
  "name": "github-training-mcpharma",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "fix:format": "npx prettier --write .",
    "check:format": "npx prettier --check .",
    "check:types": "tsc --project tsconfig.json",
    "validate": "npm-run-all --parallel lint check:types check:format",
    "audit-report": "npm audit --json | npm-audit-html --output artifacts/audit-reports/index.html",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "e2e": "npx playwright test",
    "e2e:ui": "npx playwright test --ui"
  },
  "dependencies": {
    "next": "14.2.14",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@estruyf/github-actions-reporter": "^1.9.2",
    "@playwright/test": "^1.48.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.14",
    "npm-audit-html": "^1.5.0",
    "npm-audit-report": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8",
    "prettier": "3.3.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
